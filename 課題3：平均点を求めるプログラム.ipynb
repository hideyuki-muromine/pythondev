   "source": [
    "total = 0\n",
    "count = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:  # -1 が入力されたら繰り返し終了\n",
    "        break\n",
    "    total += score\n",
    "    count += 1\n",
    "\n",
    "average = total / count\n",
    "average = round(average, 1) \n",
    "\n",
    "print(f\"{count}人の平均は{average}です\")\n"
   ]
  }
